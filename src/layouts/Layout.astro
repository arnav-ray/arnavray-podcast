---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="description" content="Daily automated podcasts in English and German" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <title>{title}</title>
</head>
<body>
  <slot />
</body>

<style is:global>
  html {
    font-family: system-ui, sans-serif;
  }
  
  body {
    margin: 0;
    padding: 20px;
    background: #f8fafc;
    line-height: 1.6;
  }
  
  main {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .hero {
    text-align: center;
    padding: 3rem 1rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border-radius: 12px;
    margin-bottom: 2rem;
  }
  
  .hero h1 {
    font-size: 2.5rem;
    margin: 0 0 1rem 0;
  }
  
  .demo {
    text-align: center;
    padding: 2rem;
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    margin: 2rem 0;
  }
  
  .generate-button {
    background: #10b981;
    color: white;
    border: none;
    padding: 1rem 2rem;
    border-radius: 30px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s ease;
  }
  
  .generate-button:hover {
    background: #059669;
  }
  
  .episode {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    margin: 2rem 0;
    text-align: left;
  }
  
  .episode h3 {
    color: #1f2937;
    margin-top: 0;
  }
  
  .play-episode-btn {
    background: #3b82f6;
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 25px;
    cursor: pointer;
    margin: 1rem 0;
  }
  
  .play-episode-btn:hover {
    background: #2563eb;
  }
  
  .transcript {
    margin-top: 1rem;
    border-top: 1px solid #e5e7eb;
    padding-top: 1rem;
  }
  
  .transcript summary {
    color: #3b82f6;
    cursor: pointer;
    font-weight: 500;
    padding: 0.5rem 0;
  }
  
  .transcript-content {
    background: #f9fafb;
    padding: 1rem;
    border-radius: 8px;
    margin-top: 1rem;
    white-space: pre-line;
    line-height: 1.6;
  }
  
  .loading {
    color: #3b82f6;
    font-size: 1.1rem;
    margin: 1rem 0;
  }
  
  .error {
    color: #ef4444;
    background: #fef2f2;
    padding: 1rem;
    border-radius: 8px;
    border: 1px solid #fecaca;
  }
</style>
</html>
